<%- include('includes/head') %>
    <%- include('includes/nav') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Contatos</h1>
                    <p class="text-center lead">Crie ou edite seu contato abaixo</p>

                    <%- include ('includes/messages') %>

                    <% if(contact._id) { %>
                        <form action="/contact/edit/<%= contact._id %>" method="post">
                    <% } else { %>
                        <form action="/contact/register" method="post">
                    <% } %>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                            <label>Nome</label>
                            <input value="<%= contact.nome %>" type="text" class="form-control" name="nome">
                        </div>
                        <div class="form-group">
                            <label>Sobrenome</label>
                            <input value="<%= contact.sobrenome %>" type="text" class="form-control" name="sobrenome">
                        </div>
                        <div class="form-group">
                            <label>E-mail</label>
                            <input value="<%= contact.email %>" type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Telefone</label>
                            <input value="<%= contact.telefone %>" type="tel" class="form-control" name="telefone">
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </form>

                    <div class="responsive-table">
                        
                    </div>
                </div>

                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer') %>